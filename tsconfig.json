{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src/app/",
    "paths": {
      "@pages/*": ["(routes)/*"],
      "@assets/*": ["_assets/*"],
      "@components/*": ["_components/*"],
      "@contexts/*": ["_contexts/*"],
      "@hooks/*": ["_hooks/*"],
      "@i18n/*": ["_i18n/*"],
      "@models/*": ["_models/*"],
      "@redux/*": ["_redux/*"],
      "@theme/*": ["_theme/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
